{
    "name": "phev-view",
    "version": "1.0.0",
    "description": "Phev code viewer",
    "main": "index.js",
    "scripts": {
        "test": "npm run test-unit",
        "start": "node index.js",
        "start-dev": "webpack-dev-server --hot",
        "test-unit": "cross-env NODE_ENV=test mocha --require babel-polyfill --compilers js:babel-core/register --recursive ./src/**/*.spec.js",
        "test-watch": "cross-env NODE_ENV=test mocha --watch --require babel-polyfill --compilers js:babel-core/register --recursive ./src/**/*.spec.js",
        "build": "babel src -d lib && webpack",
        "deploy": "npm run build && firebase deploy"
    },
    "author": "Jamie Nuttall",
    "license": "ISC",
    "dependencies": {
        "express": "^4.15.3",
        "firebase": "^4.1.3",
        "global-undom": "^0.1.1",
        "loader-utils": "^1.1.0",
        "mqtt": "^2.9.1"
    },
    "devDependencies": {
        "babel-cli": "^6.24.1",
        "babel-core": "^6.25.0",
        "babel-loader": "^7.1.1",
        "babel-preset-env": "^1.6.0",
        "chai": "^3.5.0",
        "cross-env": "^4.0.0",
        "firebase-server": "^0.10.1",
        "immutable": "^3.8.1",
        "mocha": "^3.4.2",
        "mocha-junit-reporter": "^1.13.0",
        "mocha-webpack": "^0.7.0",
        "rxjs": "^5.4.2",
        "sinon": "^2.3.5",
        "webpack": "^2.7.0",
        "webpack-dev-middleware": "^1.11.0",
        "webpack-dev-server": "^2.5.1",
        "webpack-hot-middleware": "^2.18.2"
    }
}
