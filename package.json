{
  "name": "phev-view",
  "version": "1.0.0",
  "description": "Phev code viewer",
  "main": "index.js",
  "scripts": {
    "test": "npm run test-unit",
    "start": "node index.js",
    "start-dev": "npm run build && webpack-dev-server",
    "test-unit": "cross-env NODE_ENV=test mocha --require babel-polyfill --compilers js:babel-core/register --recursive ./src/**/*.spec.js",
    "test-watch": "cross-env NODE_ENV=test mocha --watch --require babel-polyfill --compilers js:babel-core/register --recursive ./src/**/*.spec.js",
    "build": "babel src -d lib && webpack",
    "deploy": "npm run build && firebase deploy"
  },
  "author": "Jamie Nuttall",
  "license": "ISC",
  "dependencies": {
    "express": "^4.15.3",
    "firebase": "^4.1.2",
    "mqtt": "^2.8.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-env": "^1.3.3",
    "chai": "^3.5.0",
    "cross-env": "^4.0.0",
    "mocha": "^3.4.2",
    "mocha-webpack": "^0.7.0",
    "sinon": "^2.3.5",
    "webpack": "^2.6.1",
    "webpack-dev-middleware": "^1.10.2",
    "webpack-dev-server": "^2.4.5",
    "webpack-hot-middleware": "^2.18.0"
  }
}
